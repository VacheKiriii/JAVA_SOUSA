<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.esiee.easytrainfx.AjoutArretController" spacing="10" alignment="CENTER">
    <GridPane hgap="10" vgap="10">
        <Label text="Nom de l'arrêt:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Type d'arrêt:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Button text="Réinitialiser" onAction="#handleReinitialiser"/>
    <Button text="Ajouter Arrêt" onAction="#handleAjouterArret"/>

    <Label fx:id="messageLabel" textFill="RED"/>
</VBox>